

    <div class="col-xs-3">
      <h2>User info</h2>
       <%= attachment_image_tag user, :profile_image,format: 'jpeg', fallback: "noimage.png", size: "50x50" %>
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= user.introduction %></th>
          </tr>

        </tbody>
      </table>
      <div>
        <%= link_to  "" ,edit_user_path(user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>

      <h2>New book</h2>
      <% if book.errors.any? %>
          <div class="alert alert-warning">
            <ul>
             <% book.errors.full_messages.each do |message| %>
                <li><%= message %>error</li>
              <% end %>
            </ul>
         </div>
        <% end %>
      <%= form_for(book, url: books_path, method: :post) do |f| %>
        <div class ="field row">
          <p for="book_title">Title</p>
          <%= f.text_field :title ,class:"col-xs-12"%>
        </div>
        <div class ="field row">
          <p>Opinion</p>
          <%= f.text_area :body, class:"col-xs-12"%><br>
        </div>
        <div class ="field row col-xs-12">
          <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>
      <% end %>
      </div>
