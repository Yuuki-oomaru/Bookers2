
<div class="container">
  <div class="row">


<%= render 'users/users', user:@user, book:@book %>


      <div class="col-xs-9">
        <h2>Users</h2>
        <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image,format: 'jpeg', fallback: "noimage.png", size: "50x50" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show",user_path(user.id) %></td>
    </tr>
      <%end%>
        </tbody>
      </table>
      </div>
    </div>
</div>
