<div class="container">
  <div class="row">
    <div class ="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
          <div class="alert alert-warning">
            <ul>
             <% @book.errors.full_messages.each do |message| %>
                <li><%= message %>error</li>
              <% end %>
            <% end %>
            </ul>
         </div>
      <%= form_for(@book) do |f| %>
     <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Update Book' %>
      <% end %>
      <%= link_to"Show" ,book_path(@book)%>
      |
      <%= link_to"Back",books_path%>
    </div>
  </div>
</div>
