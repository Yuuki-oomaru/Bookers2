<div class="container">
  <div class="row">
    <div class ="col-xs-3">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
          <div class="alert alert-warning">
            <ul>
             <% @book.errors.full_messages.each do |message| %>
                <li><%= message %>error</li>
              <% end %>
            </ul>
         </div>
        <% end %>
        <%= form_for(@book) do |f| %>
        <label>タイトル</label>
        <%= f.text_field :title %>
        <label>body</label>
        <%= f.text_area :body %>
        <%= f.submit 'Update Book' %>
        <% end %>
        <%= link_to"Show" ,book_path(@book)%>
        |
        <%= link_to"Back",books_path%>
    </div>
  </div>
</div>
